{% extends 'base.html.twig' %}

{% block title %}Booker - szukaj: {{ q }}{% endblock %}

{% block header %}
    {% include 'partials/header-alt.html.twig' %}
{% endblock %}

{% block body %}
    <div class="mx-auto w-[min(1100px,92%)] py-10">
        <h1 class="text-3xl font-semibold text-slate-900">Wyniki dla: {{ q }}</h1>
        <p class="mt-2 text-slate-600">Adres: <span class="font-mono">/szukaj/{{ term }}</span></p>

        {% if results is empty %}
            <div class="mt-8 rounded-2xl bg-slate-50 p-6 text-slate-700">
                Brak wyników. Spróbuj innej frazy.
            </div>
        {% else %}
            <div class="mt-8 grid gap-4 sm:grid-cols-2">
                {% for r in results %}
                    <article class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
                        <h2 class="text-lg font-semibold text-slate-900">{{ r.name }}</h2>
                        <div class="mt-2 text-sm text-slate-600">
                            {{ r.category }} --- {{ r.city }}
                        </div>
                        <div class="mt-3 text-xs text-slate-400">
                            score: {{ (r.searchScore * 100)|round }}%
                        </div>
                    </article>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
