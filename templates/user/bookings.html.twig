{% extends 'base.html.twig' %}

{% block title %}Moje rezerwacje{% endblock %}

{% block header %}
	{% include 'partials/header-alt.html.twig' %}
{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 pt-14 pb-14">
    <div class="w-full">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Moje rezerwacje</h1>
            <a href="{{ path('user_calendar') }}" class="px-4 py-2 bg-purple-600 text-white rounded-md hover:bg-purple-700">
                <i class="fas fa-calendar"></i> Kalendarz
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="p-4 mb-4 text-green-800 bg-green-100 border border-green-200 rounded-lg">{{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="p-4 mb-4 text-red-800 bg-red-100 border border-red-200 rounded-lg">{{ message }}</div>
        {% endfor %}

        <div class="mb-6 border-b border-gray-200">
            <ul class="flex flex-wrap -mb-px text-sm font-medium text-center" role="tablist">
                <li class="mr-2" role="presentation">
                    <button class="inline-block p-4 border-b-2 border-indigo-600 text-indigo-600 rounded-t-lg active" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button">
                        Nadchodzące <span class="ml-1 px-2 py-1 text-xs font-semibold rounded-full bg-indigo-100 text-indigo-800">{{ upcomingBookings|length }}</span>
                    </button>
                </li>
                <li class="mr-2" role="presentation">
                    <button class="inline-block p-4 border-b-2 border-transparent hover:text-gray-600 hover:border-gray-300 rounded-t-lg" id="past-tab" data-bs-toggle="tab" data-bs-target="#past" type="button">
                        Przeszłe <span class="ml-1 px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">{{ pastBookings|length }}</span>
                    </button>
                </li>
            </ul>
        </div>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="upcoming" role="tabpanel">
                {% if upcomingBookings is empty %}
                    <div class="p-4 mb-4 text-blue-800 bg-blue-100 border border-blue-200 rounded-lg">
                        Nie masz nadchodzących rezerwacji.
                    </div>
                {% else %}
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {% for booking in upcomingBookings %}
                            <div class="bg-white rounded-lg shadow flex flex-col h-full">
                                <div class="p-6 flex-grow">
                                    <h5 class="text-lg font-semibold text-gray-900 mb-1">{{ booking.service.name }}</h5>
                                    <h6 class="text-sm text-gray-600 mb-4">{{ booking.business.businessName }}</h6>

                                    <div class="mt-4 space-y-2">
                                        <p class="text-sm text-gray-700">
                                            <i class="fas fa-calendar w-4"></i> {{ booking.startsAt|date('d.m.Y') }}
                                        </p>
                                        <p class="text-sm text-gray-700">
                                            <i class="fas fa-clock w-4"></i> {{ booking.startsAt|date('H:i') }} - {{ booking.endsAt|date('H:i') }}
                                        </p>
                                        <p class="text-sm text-gray-700">
                                            <i class="fas fa-user w-4"></i> {{ booking.staff.name }} {{ booking.staff.surname }}
                                        </p>
                                        <p class="text-sm text-gray-700">
                                            <i class="fas fa-money-bill w-4"></i> {{ booking.priceAtBooking }} PLN
                                        </p>
                                        <p class="text-sm text-gray-700">
                                            <strong>Status:</strong>
                                            {% if booking.status.value == 'pending' %}
                                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Oczekująca</span>
                                            {% elseif booking.status.value == 'confirmed' %}
                                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Potwierdzona</span>
                                            {% elseif booking.status.value == 'cancelled' %}
                                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Anulowana</span>
                                            {% elseif booking.status.value == 'completed' %}
                                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Zakończona</span>
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                                {% if booking.status.value == 'pending' or booking.status.value == 'confirmed' %}
                                    {% set now = date() %}
                                    {% set hoursUntil = (booking.startsAt.timestamp - now.timestamp) / 3600 %}
                                    <div class="border-t border-gray-200 p-4">
                                        {% if hoursUntil < 2 %}
                                            <div class="p-3 text-sm text-orange-800 bg-orange-100 border border-orange-200 rounded-md">
                                                <i class="fas fa-exclamation-triangle"></i> Anulowanie możliwe tylko powyżej 2h przed terminem. W celu anulowania prosimy o kontakt: <strong>{{ booking.business.phone }}</strong>
                                            </div>
                                        {% else %}
                                            <form method="post" action="{{ path('booking_cancel', {id: booking.id}) }}" onsubmit="return confirm('Czy na pewno chcesz anulować tę rezerwację?')">
                                                <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ booking.id) }}">
                                                <button type="submit" class="w-full px-4 py-2 text-sm border border-red-600 text-red-600 rounded-md hover:bg-red-50">Anuluj rezerwację</button>
                                            </form>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <div class="tab-pane fade" id="past" role="tabpanel">
                {% if pastBookings is empty %}
                    <div class="p-4 mb-4 text-blue-800 bg-blue-100 border border-blue-200 rounded-lg">
                        Nie masz przeszłych rezerwacji.
                    </div>
                {% else %}
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {% for booking in pastBookings %}
                            <div class="bg-white rounded-lg shadow flex flex-col h-full">
                                <div class="p-6">
                                    <h5 class="text-lg font-semibold text-gray-900 mb-1">{{ booking.service.name }}</h5>
                                    <h6 class="text-sm text-gray-600 mb-4">{{ booking.business.businessName }}</h6>

                                    <div class="mt-4 space-y-2">
                                        <p class="text-sm text-gray-700">
                                            <i class="fas fa-calendar w-4"></i> {{ booking.startsAt|date('d.m.Y') }}
                                        </p>
                                        <p class="text-sm text-gray-700">
                                            <i class="fas fa-clock w-4"></i> {{ booking.startsAt|date('H:i') }} - {{ booking.endsAt|date('H:i') }}
                                        </p>
                                        <p class="text-sm text-gray-700">
                                            <i class="fas fa-user w-4"></i> {{ booking.staff.name }} {{ booking.staff.surname }}
                                        </p>
                                        <p class="text-sm text-gray-700">
                                            <i class="fas fa-money-bill w-4"></i> {{ booking.priceAtBooking }} PLN
                                        </p>
                                        <p class="text-sm text-gray-700">
                                            <strong>Status:</strong>
                                            {% if booking.status.value == 'pending' %}
                                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Oczekująca</span>
                                            {% elseif booking.status.value == 'confirmed' %}
                                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Potwierdzona</span>
                                            {% elseif booking.status.value == 'cancelled' %}
                                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Anulowana</span>
                                            {% elseif booking.status.value == 'completed' %}
                                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Zakończona</span>
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
