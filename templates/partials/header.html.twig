<section class="home__hero relative">
	<div class="home__hero-bg absolute inset-0"></div>
	<div class="home__hero-overlay absolute inset-0"></div>

	<div class="home__container relative z-10">
		<header class="home__header flex items-center justify-between py-6">
			<a href="{{ path('app_home') }}" class="home__logo flex items-center gap-3">
				<img src="{{ asset('images/logo-white.png') }}" alt="Booker" class="h-7 w-auto" loading="lazy">
			</a>

			<nav class="home__nav flex items-center gap-2 sm:gap-3">
				{% if app.user %}
					<a href="{{ path('user_dashboard') }}" class="home__nav-link inline-flex items-center gap-2 px-3 py-2 rounded-xl text-white/90 hover:text-white hover:bg-white/10 transition">
						<i class="fa-regular fa-user home__icon"></i>
						<span class="hidden sm:inline">Moje Konto</span>
					</a>

					{% if app.user.role.value == 'BUSINESS_OWNER' %}
						<a href="{{ path('owner_dashboard') }}" class="home__nav-link inline-flex items-center gap-2 px-3 py-2 rounded-xl text-white/90 hover:text-white hover:bg-white/10 transition">
							<i class="fa-regular fa-building home__icon"></i>
							<span class="hidden sm:inline">Panel właściciela</span>
						</a>
					{% endif %}

					<a href="{{ path('app_logout') }}" class="home__nav-link inline-flex items-center gap-2 px-3 py-2 rounded-xl text-white/90 hover:text-white hover:bg-white/10 transition">
						<i class="fa-solid fa-arrow-right-from-bracket home__icon"></i>
						<span class="hidden sm:inline">Wyloguj się</span>
					</a>
				{% else %}
					<a href="{{ path('app_login') }}" class="home__nav-link inline-flex items-center gap-2 px-3 py-2 rounded-xl text-white/90 hover:text-white hover:bg-white/10 transition">
						<i class="fa-regular fa-user home__icon"></i>
						<span class="hidden sm:inline">Zaloguj się</span>
					</a>

					<a href="{{ path('app_register', { typ_konta: 'uzytkownik' }) }}" class="home__nav-link inline-flex items-center gap-2 px-3 py-2 rounded-xl text-white/90 hover:text-white hover:bg-white/10 transition">
						<i class="fa-regular fa-square-plus home__icon"></i>
						<span class="hidden sm:inline">Załóż konto</span>
					</a>

					<a href="{{ path('app_register', { typ_konta: 'biznes' }) }}" class="home__nav-cta inline-flex items-center justify-center bg-white text-[color:var(--c-primary)] px-6 py-3 font-semibold shadow-sm hover:shadow-md transition">
						Dodaj swój biznes
					</a>
				{% endif %}
			</nav>

		</header>

		<div class="home__hero-content flex flex-col items-center text-center py-10 my-8 sm:py-6">
			<h1 class="home__hero-title text-white font-extrabold tracking-tight leading-tight text-3xl sm:text-5xl">
				<span id="heroTyped">Zarezerwuj czas dla siebie</span><span class="home__caret">|</span>
			</h1>

			<p class="home__hero-subtitle mt-4 text-white/90 max-w-2xl text-base sm:text-lg">
				Odkryj najlepsze miejsca w okolicy i zarezerwuj wizytę online!
			</p>

			<form action="{{ path('app_search') }}" method="get" class="home__search mt-12 w-full max-w-3xl">
				<div class="home__search-wrap flex items-center gap-3 rounded-2xl bg-white/95 px-4 py-3 shadow-lg">
					<i class="fa-solid fa-magnifying-glass home__search-icon"></i>
					<input type="text" name="q" placeholder="Szukaj usług lub biznesów..." class="home__search-input w-full bg-transparent outline-none text-slate-900 placeholder:text-slate-500">
					<button type="submit" class="home__search-btn inline-flex items-center justify-center px-6 py-2 font-semibold text-white bg-[color:var(--c-cta)] hover:brightness-95 transition">
						Szukaj
					</button>
				</div>
			</form>

			{% set heroPills = [
				{ label: 'Fryzjer', slug: 'fryzjer' },
				{ label: 'Barber shop', slug: 'barber-shop' },
				{ label: 'Salon kosmetyczny', slug: 'salon-kosmetyczny' },
				{ label: 'Paznokcie', slug: 'paznokcie' },
				{ label: 'Fizjoterapia', slug: 'fizjoterapia' },
				{ label: 'Brwi i rzęsy', slug: 'brwi-i-rzesy' },
				{ label: 'Masaż', slug: 'masaz' },
				{ label: 'Zdrowie', slug: 'zdrowie' },
				{ label: 'Więcej', slug: 'wiecej' },
			] %}

			<div class="home__hero-pills mt-12 w-full">
				<div class="flex flex-wrap items-center justify-center gap-2 sm:gap-3">
					{% for pill in heroPills %}
						<a href="{{ path('app_service_landing', { slug: pill.slug }) }}" class="home__pill inline-flex items-center rounded-full bg-white/10 px-4 py-2 text-sm text-white/90 hover:bg-white/15 hover:text-white transition">
							{{ pill.label }}
						</a>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</section>