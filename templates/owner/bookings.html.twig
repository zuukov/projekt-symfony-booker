{% extends 'base.html.twig' %}

{% block title %}Rezerwacje - {{ business.businessName }}{% endblock %}

{% block header %}
    {% include 'partials/header-alt.html.twig' %}
{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 mt-8 pt-14 min-h-[70vh] pb-40">
    <div class="w-full">
        <nav class="mb-6" aria-label="breadcrumb">
            <ol class="flex space-x-2 text-sm text-gray-600">
                <li><a href="{{ path('owner_dashboard') }}" class="hover:text-indigo-600">Panel właściciela</a></li>
                <li class="before:content-['/'] before:mx-2"><a href="{{ path('owner_business_staff', {id: business.id}) }}" class="hover:text-indigo-600">{{ business.businessName }}</a></li>
                <li class="before:content-['/'] before:mx-2 text-gray-900">Rezerwacje</li>
            </ol>
        </nav>

        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Rezerwacje - {{ business.businessName }}</h1>
            <a href="{{ path('owner_dashboard', {id: business.id}) }}" class="px-4 py-2 bg-white border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50">Powrót</a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="p-4 mb-4 text-green-800 bg-green-100 border border-green-200 rounded-lg">{{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="p-4 mb-4 text-red-800 bg-red-100 border border-red-200 rounded-lg">{{ message }}</div>
        {% endfor %}

        {% if bookings is empty %}
            <div class="p-4 mb-4 text-blue-800 bg-blue-100 border border-blue-200 rounded-lg">
                Brak rezerwacji dla tej firmy.
            </div>
        {% else %}
            <div class="overflow-x-auto bg-white rounded-lg shadow">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Data</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Godzina</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Klient</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Pracownik</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Usługa</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Cena</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Status</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Akcje</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for booking in bookings %}
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">{{ booking.startsAt|date('d.m.Y') }}</td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">{{ booking.startsAt|date('H:i') }} - {{ booking.endsAt|date('H:i') }}</td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">{{ booking.user.name }} {{ booking.user.surname }}</td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">{{ booking.staff.name }} {{ booking.staff.surname }}</td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">{{ booking.service.name }}</td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">{{ booking.priceAtBooking }} PLN</td>
                                <td class="px-4 py-3 whitespace-nowrap">
                                    {% if booking.status.value == 'pending' %}
                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Oczekująca</span>
                                    {% elseif booking.status.value == 'confirmed' %}
                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Potwierdzona</span>
                                    {% elseif booking.status.value == 'cancelled' %}
                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Anulowana</span>
                                    {% elseif booking.status.value == 'completed' %}
                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Zakończona</span>
                                    {% endif %}
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm">
                                    <div class="flex gap-1">
                                        {% if booking.status.value == 'pending' %}
                                            <form method="post" action="{{ path('owner_booking_confirm', {id: booking.id}) }}" class="inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('confirm' ~ booking.id) }}">
                                                <button type="submit" class="px-2 py-1 text-xs border border-green-600 text-green-600 rounded hover:bg-green-50" title="Potwierdź">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        {% endif %}

                                        {% if booking.status.value == 'confirmed' %}
                                            <form method="post" action="{{ path('owner_booking_complete', {id: booking.id}) }}" class="inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('complete' ~ booking.id) }}">
                                                <button type="submit" class="px-2 py-1 text-xs border border-blue-600 text-blue-600 rounded hover:bg-blue-50" title="Zakończ">
                                                    <i class="fas fa-check-double"></i>
                                                </button>
                                            </form>
                                        {% endif %}

                                        {% if booking.status.value == 'pending' or booking.status.value == 'confirmed' %}
                                            <form method="post" action="{{ path('owner_booking_cancel', {id: booking.id}) }}" class="inline" onsubmit="return confirm('Czy na pewno chcesz anulować tę rezerwację?')">
                                                <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ booking.id) }}">
                                                <button type="submit" class="px-2 py-1 text-xs border border-red-600 text-red-600 rounded hover:bg-red-50" title="Anuluj">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
