{% extends 'base.html.twig' %}

{% block title %}Booker - {{ is_edit ? 'Edytuj Biznes' : 'Utwórz Biznes' }}{% endblock %}

{% block header %}
    {% include 'partials/header-alt.html.twig' %}
{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 pt-12 pt-14 min-h-[70vh] pb-40">
    <div class="flex justify-center">
        <div class="w-full">
            <div class="bg-white rounded-lg shadow">
                <div class="border-b border-gray-200 px-6 py-4">
                    <h1 class="text-2xl font-bold text-gray-900">{{ is_edit ? 'Edytuj Biznes' : 'Utwórz Nowy Biznes' }}</h1>
                </div>
                <div class="px-6 py-6">
                    {% for message in app.flashes('success') %}
                        <div class="p-4 mb-4 text-green-800 bg-green-100 border border-green-200 rounded-lg">{{ message }}</div>
                    {% endfor %}

                    {{ form_start(form) }}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                {{ form_row(form.businessName) }}
                            </div>
                            <div>
                                {{ form_row(form.formalBusinessName) }}
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                            <div>
                                {{ form_row(form.phone) }}
                            </div>
                            <div>
                                {{ form_row(form.secondaryPhone) }}
                            </div>
                        </div>

                        <div class="mt-4">
                            {{ form_row(form.email) }}
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                            <div>
                                {{ form_row(form.city) }}
                            </div>
                            <div>
                                {{ form_row(form.postalCode) }}
                            </div>
                        </div>

                        <div class="mt-4">
                            {{ form_row(form.address) }}
                        </div>

                        <div class="mt-4">
                            {{ form_row(form.description) }}
                        </div>

                        <div class="mt-4">
                            {{ form_row(form.specialNote) }}
                            <p class="text-xs text-gray-500 mt-1">
                                <span id="char-count">0</span>/200 znaków
                            </p>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                            <div>
                                {{ form_row(form.instagramUrl) }}
                            </div>
                            <div>
                                {{ form_row(form.facebookUrl) }}
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                            <div>
                                {{ form_row(form.websiteUrl) }}
                            </div>
                            <div>
                                {{ form_row(form.logoUrl) }}
                            </div>
                        </div>

                        {# Photo URLs Section #}
                        <div class="mt-6 border-t pt-6">
                            {{ form_row(form.photoUrls) }}
                            <div id="photo-urls-wrapper" class="mt-2">
                                <button type="button" id="add-photo-url" class="px-4 py-2 my-3 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">
                                    <i class="fa-solid fa-plus"></i> Dodaj URL zdjęcia
                                </button>
                                <p class="text-xs text-gray-500 mt-1">
                                    Dodano <span id="photo-count">0</span>/10 zdjęć
                                </p>
                            </div>
                        </div>

                        {# Opening Hours Section #}
                        {% if form.businessWorkingHours is defined %}
                        <div class="mt-6 border-t pt-6">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">Godziny otwarcia</h3>
                            <p class="text-sm text-gray-600 mb-4">
                                Ustaw godziny otwarcia dla każdego dnia tygodnia. Pozostaw puste pola dla dni, w które jesteś nieczynny.
                            </p>

                            <div class="space-y-3">
                                {% set dayNames = ['Poniedziałek', 'Wtorek', 'Środa', 'Czwartek', 'Piątek', 'Sobota', 'Niedziela'] %}
                                {% for hours in form.businessWorkingHours %}
                                    {% set weekdayIndex = hours.vars.value.weekday ?? loop.index0 %}
                                    <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-md">
                                        <div class="w-32 font-medium text-gray-700">
                                            {{ dayNames[weekdayIndex] }}
                                        </div>
                                        <div class="flex items-center gap-2 flex-1">
                                            <label class="text-sm text-gray-600">Otwarte:</label>
                                            {{ form_widget(hours.opensAt) }}
                                            <span class="text-gray-500">—</span>
                                            <label class="text-sm text-gray-600">Zamknięte:</label>
                                            {{ form_widget(hours.closesAt) }}
                                            {{ form_widget(hours.weekday, {'attr': {'style': 'display:none'}}) }}
                                        </div>
                                    </div>
                                    {{ form_errors(hours) }}
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}

                        {# Safety Rules Section #}
                        {% if form.safetyRules is defined %}
                        <div class="mt-6 border-t pt-6">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">{{ form_label(form.safetyRules) }}</h3>
                            <p class="text-sm text-gray-600 mb-4">
                                Wybierz zasady bezpieczeństwa obowiązujące w Twoim biznesie.
                            </p>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                                {% for child in form.safetyRules %}
                                    <div class="flex items-center">
                                        <label class="flex items-center cursor-pointer">
                                            {{ form_widget(child, {'attr': {'class': 'mr-2 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500'}}) }}
                                            <span class="text-sm text-gray-700">{{ child.vars.label }}</span>
                                        </label>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}

                        {# Amenities Section #}
                        {% if form.amenities is defined %}
                        <div class="mt-6 border-t pt-6">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">{{ form_label(form.amenities) }}</h3>
                            <p class="text-sm text-gray-600 mb-4">
                                Wybierz udogodnienia dostępne w Twoim biznesie.
                            </p>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                                {% for child in form.amenities %}
                                    <div class="flex items-center">
                                        <label class="flex items-center cursor-pointer">
                                            {{ form_widget(child, {'attr': {'class': 'mr-2 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500'}}) }}
                                            <span class="text-sm text-gray-700">{{ child.vars.label }}</span>
                                        </label>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}

                        <div class="flex justify-between mt-6">
                            <a href="{{ path('owner_dashboard') }}" class="px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700">Anuluj</a>
                            <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">
                                {{ is_edit ? 'Zaktualizuj Biznes' : 'Utwórz Biznes' }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Character counter for special note
    const specialNoteField = document.querySelector('textarea[name*="specialNote"]');
    const charCountSpan = document.getElementById('char-count');

    if (specialNoteField && charCountSpan) {
        function updateCharCount() {
            charCountSpan.textContent = specialNoteField.value.length;
        }

        updateCharCount();
        specialNoteField.addEventListener('input', updateCharCount);
    }

    // Photo URLs Collection Management
    const addButton = document.getElementById('add-photo-url');
    const countSpan = document.getElementById('photo-count');
    const maxItems = 10;

    if (addButton && countSpan) {
        // Find the collection container (Symfony renders it with a specific structure)
        const collectionHolder = document.querySelector('[data-prototype]');

        if (collectionHolder) {
            function updateCount() {
                // Count input fields in the collection
                const count = collectionHolder.querySelectorAll('input[type="url"]').length;
                countSpan.textContent = count;
                addButton.disabled = count >= maxItems;

                if (count >= maxItems) {
                    addButton.classList.add('opacity-50', 'cursor-not-allowed');
                } else {
                    addButton.classList.remove('opacity-50', 'cursor-not-allowed');
                }
            }

            function addPhotoUrl() {
                const count = collectionHolder.querySelectorAll('input[type="url"]').length;
                if (count >= maxItems) return;

                const prototype = collectionHolder.dataset.prototype;
                const index = collectionHolder.dataset.index || count;

                // Replace __name__ with index
                const newForm = prototype.replace(/__name__/g, index);

                // Create new item
                const item = document.createElement('div');
                item.innerHTML = newForm;

                collectionHolder.appendChild(item);
                collectionHolder.dataset.index = parseInt(index) + 1;

                updateCount();
            }

            addButton.addEventListener('click', addPhotoUrl);

            // Initialize count
            updateCount();
        }
    }
});
</script>
{% endblock %}
