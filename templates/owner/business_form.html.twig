{% extends 'base.html.twig' %}

{% block title %}{{ is_edit ? 'Edit Business' : 'Create Business' }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1>{{ is_edit ? 'Edit Business' : 'Create New Business' }}</h1>
                </div>
                <div class="card-body">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}

                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.businessName) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.formalBusinessName) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.phone) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.secondaryPhone) }}
                            </div>
                        </div>

                        {{ form_row(form.email) }}

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.city) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.postalCode) }}
                            </div>
                        </div>

                        {{ form_row(form.address) }}

                        {{ form_row(form.description) }}

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.instagramUrl) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.facebookUrl) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.websiteUrl) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.logoUrl) }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('owner_dashboard') }}" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                {{ is_edit ? 'Update Business' : 'Create Business' }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
