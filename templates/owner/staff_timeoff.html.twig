{% extends 'base.html.twig' %}

{% block title %}Urlopy - {{ staff.name }} {{ staff.surname }}{% endblock %}

{% block header %}
    {% include 'partials/header-alt.html.twig' %}
{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 mt-8 pt-14 min-h-[70vh] pb-40">
    <div class="w-full">
        <nav class="mb-6" aria-label="breadcrumb">
            <ol class="flex space-x-2 text-sm text-gray-600">
                <li><a href="{{ path('owner_dashboard') }}" class="hover:text-indigo-600">Panel właściciela</a></li>
                <li class="before:content-['/'] before:mx-2"><a href="{{ path('owner_business_staff', {id: business.id}) }}" class="hover:text-indigo-600">{{ business.businessName }}</a></li>
                <li class="before:content-['/'] before:mx-2 text-gray-900">Urlopy - {{ staff.name }} {{ staff.surname }}</li>
            </ol>
        </nav>

        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Urlopy i nieobecności - {{ staff.name }} {{ staff.surname }}</h1>
            <a href="{{ path('owner_business_staff', {id: business.id}) }}" class="px-4 py-2 bg-white border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50">Powrót</a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="p-4 mb-4 text-green-800 bg-green-100 border border-green-200 rounded-lg">{{ message }}</div>
        {% endfor %}

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow mb-6">
                    <div class="border-b border-gray-200 px-6 py-4">
                        <h5 class="text-lg font-semibold text-gray-900">Nadchodzące nieobecności</h5>
                    </div>
                    <div class="p-6">
                        {% if upcomingTimeOffs is empty %}
                            <p class="text-gray-500">Brak zaplanowanych nieobecności.</p>
                        {% else %}
                            <div class="space-y-3">
                                {% for timeOff in upcomingTimeOffs %}
                                    <div class="border border-gray-200 rounded-lg p-4">
                                        <div class="flex justify-between items-start">
                                            <div>
                                                <h6 class="font-semibold text-gray-900 mb-1">
                                                    {{ timeOff.startsAt|date('d.m.Y H:i') }} - {{ timeOff.endsAt|date('d.m.Y H:i') }}
                                                </h6>
                                                {% if timeOff.reason %}
                                                    <p class="text-gray-600 mb-1">{{ timeOff.reason }}</p>
                                                {% endif %}
                                                <small class="text-gray-500">
                                                    {% set duration = timeOff.startsAt.diff(timeOff.endsAt) %}
                                                    ({{ duration.days }} dni)
                                                </small>
                                            </div>
                                            <form method="post" action="{{ path('owner_staff_timeoff_delete', {businessId: business.id, staffId: staff.id, timeoffId: timeOff.id}) }}" class="inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ timeOff.id) }}">
                                                <button type="submit" class="px-2 py-1 text-xs border border-red-600 text-red-600 rounded hover:bg-red-50" onclick="return confirm('Czy na pewno chcesz usunąć tę nieobecność?')">Usuń</button>
                                            </form>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="bg-white rounded-lg shadow">
                    <div class="border-b border-gray-200 px-6 py-4">
                        <h5 class="text-lg font-semibold text-gray-900">Przeszłe nieobecności</h5>
                    </div>
                    <div class="p-6">
                        {% if pastTimeOffs is empty %}
                            <p class="text-gray-500">Brak przeszłych nieobecności.</p>
                        {% else %}
                            <div class="space-y-3">
                                {% for timeOff in pastTimeOffs %}
                                    <div class="border border-gray-200 rounded-lg p-4">
                                        <div class="flex justify-between items-start">
                                            <div>
                                                <h6 class="font-semibold text-gray-900 mb-1">
                                                    {{ timeOff.startsAt|date('d.m.Y H:i') }} - {{ timeOff.endsAt|date('d.m.Y H:i') }}
                                                </h6>
                                                {% if timeOff.reason %}
                                                    <p class="text-gray-600 mb-1">{{ timeOff.reason }}</p>
                                                {% endif %}
                                            </div>
                                            <form method="post" action="{{ path('owner_staff_timeoff_delete', {businessId: business.id, staffId: staff.id, timeoffId: timeOff.id}) }}" class="inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ timeOff.id) }}">
                                                <button type="submit" class="px-2 py-1 text-xs border border-red-600 text-red-600 rounded hover:bg-red-50" onclick="return confirm('Czy na pewno chcesz usunąć tę nieobecność?')">Usuń</button>
                                            </form>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="lg:col-span-1">
                <div class="bg-white rounded-lg shadow">
                    <div class="border-b border-gray-200 px-6 py-4">
                        <h5 class="text-lg font-semibold text-gray-900">Dodaj nieobecność</h5>
                    </div>
                    <div class="p-6">
                        {{ form_start(form) }}
                            <div class="mb-4">
                                {{ form_label(form.startsAt) }}
                                {{ form_widget(form.startsAt, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.startsAt) }}
                            </div>

                            <div class="mb-4">
                                {{ form_label(form.endsAt) }}
                                {{ form_widget(form.endsAt, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.endsAt) }}
                            </div>

                            <div class="mb-4">
                                {{ form_label(form.reason) }}
                                {{ form_widget(form.reason, {'attr': {'class': 'form-control', 'rows': '3'}}) }}
                                {{ form_errors(form.reason) }}
                            </div>

                            <button type="submit" class="w-full px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">Dodaj</button>
                        {{ form_end(form) }}

                        <div class="mt-4 p-3 text-sm text-blue-800 bg-blue-100 border border-blue-200 rounded-lg">
                            <strong>Wskazówka:</strong> Nieobecności zapobiegają rezerwacjom w wybranych terminach (urlopy, święta, dni wolne itp.).
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
