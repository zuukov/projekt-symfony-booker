{% extends 'base.html.twig' %}

{% block title %}{{ is_edit ? 'Edytuj Pracownika' : 'Dodaj Pracownika' }} - {{ business.businessName }}{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 mt-8">
    <div class="flex justify-center">
        <div class="w-full max-w-4xl">
            <nav class="mb-6" aria-label="breadcrumb">
                <ol class="flex space-x-2 text-sm text-gray-600">
                    <li><a href="{{ path('owner_dashboard') }}" class="hover:text-indigo-600">Panel właściciela</a></li>
                    <li class="before:content-['/'] before:mx-2"><a href="{{ path('owner_business_staff', {id: business.id}) }}" class="hover:text-indigo-600">{{ business.businessName }}</a></li>
                    <li class="before:content-['/'] before:mx-2 text-gray-900">{{ is_edit ? 'Edytuj Pracownika' : 'Dodaj Pracownika' }}</li>
                </ol>
            </nav>

            <div class="bg-white rounded-lg shadow">
                <div class="border-b border-gray-200 px-6 py-4">
                    <h1 class="text-2xl font-bold text-gray-900">{{ is_edit ? 'Edytuj Pracownika' : 'Dodaj Nowego Pracownika' }}</h1>
                    <p class="text-gray-600 mt-1">Dla {{ business.businessName }}</p>
                </div>
                <div class="px-6 py-6">
                    {% for message in app.flashes('success') %}
                        <div class="p-4 mb-4 text-green-800 bg-green-100 border border-green-200 rounded-lg">{{ message }}</div>
                    {% endfor %}

                    {{ form_start(form) }}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                {{ form_row(form.name) }}
                            </div>
                            <div>
                                {{ form_row(form.surname) }}
                            </div>
                        </div>

                        <div class="mt-4">
                            {{ form_row(form.aboutMe) }}
                        </div>

                        <div class="mt-4">
                            {{ form_row(form.experience) }}
                        </div>

                        <div class="mt-4">
                            {{ form_row(form.school) }}
                        </div>

                        <div class="mt-4">
                            {{ form_row(form.avatarImage) }}
                        </div>

                        <div class="flex justify-between mt-6">
                            <a href="{{ path('owner_business_staff', {id: business.id}) }}" class="px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700">Anuluj</a>
                            <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">
                                {{ is_edit ? 'Zaktualizuj Pracownika' : 'Dodaj Pracownika' }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
