{% extends 'base.html.twig' %}

{% block title %}Grafik - {{ staff.name }} {{ staff.surname }}{% endblock %}

{% block header %}
    {% include 'partials/header-alt.html.twig' %}
{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 mt-8 pt-14 min-h-[70vh] pb-40">
    <div class="w-full">
        <nav class="mb-6" aria-label="breadcrumb">
            <ol class="flex space-x-2 text-sm text-gray-600">
                <li><a href="{{ path('owner_dashboard') }}" class="hover:text-indigo-600">Panel właściciela</a></li>
                <li class="before:content-['/'] before:mx-2"><a href="{{ path('owner_business_staff', {id: business.id}) }}" class="hover:text-indigo-600">{{ business.businessName }}</a></li>
                <li class="before:content-['/'] before:mx-2 text-gray-900">Grafik - {{ staff.name }} {{ staff.surname }}</li>
            </ol>
        </nav>

        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Grafik pracy - {{ staff.name }} {{ staff.surname }}</h1>
            <a href="{{ path('owner_business_staff', {id: business.id}) }}" class="px-4 py-2 bg-white border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50">Powrót</a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="p-4 mb-4 text-green-800 bg-green-100 border border-green-200 rounded-lg">{{ message }}</div>
        {% endfor %}

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow mb-6">
                    <div class="border-b border-gray-200 px-6 py-4">
                        <h5 class="text-lg font-semibold text-gray-900">Godziny pracy</h5>
                    </div>
                    <div class="p-6">
                        {% set weekdays = ['Poniedziałek', 'Wtorek', 'Środa', 'Czwartek', 'Piątek', 'Sobota', 'Niedziela'] %}

                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Dzień tygodnia</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Godziny</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider" style="width: 100px;">Akcje</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    {% for i in 0..6 %}
                                        <tr>
                                            <td class="px-4 py-3 whitespace-nowrap"><strong class="font-semibold text-gray-900">{{ weekdays[i] }}</strong></td>
                                            <td class="px-4 py-3">
                                                {% set dayHours = workingHours|filter(wh => wh.weekday == i) %}
                                                {% if dayHours is empty %}
                                                    <span class="text-gray-500">Nie pracuje</span>
                                                {% else %}
                                                    {% for wh in dayHours %}
                                                        <div class="flex justify-between items-center mb-2 last:mb-0">
                                                            <span class="text-gray-900">{{ wh.startsAt|date('H:i') }} - {{ wh.endsAt|date('H:i') }}</span>
                                                            <form method="post" action="{{ path('owner_staff_schedule_delete', {businessId: business.id, staffId: staff.id, scheduleId: wh.id}) }}" class="inline">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ wh.id) }}">
                                                                <button type="submit" class="px-2 py-1 text-xs border border-red-600 text-red-600 rounded hover:bg-red-50" onclick="return confirm('Czy na pewno chcesz usunąć te godziny pracy?')">Usuń</button>
                                                            </form>
                                                        </div>
                                                    {% endfor %}
                                                {% endif %}
                                            </td>
                                            <td class="px-4 py-3"></td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-1">
                <div class="bg-white rounded-lg shadow">
                    <div class="border-b border-gray-200 px-6 py-4">
                        <h5 class="text-lg font-semibold text-gray-900">Dodaj godziny pracy</h5>
                    </div>
                    <div class="p-6">
                        {{ form_start(form) }}
                            <div class="mb-4">
                                {{ form_label(form.weekday) }}
                                {{ form_widget(form.weekday, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.weekday) }}
                            </div>

                            <div class="mb-4">
                                {{ form_label(form.startsAt) }}
                                {{ form_widget(form.startsAt, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.startsAt) }}
                            </div>

                            <div class="mb-4">
                                {{ form_label(form.endsAt) }}
                                {{ form_widget(form.endsAt, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.endsAt) }}
                            </div>

                            <button type="submit" class="w-full px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700">Dodaj</button>
                        {{ form_end(form) }}

                        <div class="mt-4 p-3 text-sm text-blue-800 bg-blue-100 border border-blue-200 rounded-lg">
                            <strong>Informacja:</strong> Możesz dodać wiele zakresów godzin dla tego samego dnia (np. dla zmian podzielonych).
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
